@page "/"
@using MauiApp1.Models
@inject UserService UserService
@inject NavigationManager NavigationManager
@using MauiApp1.Components.Layout
@layout FirstLayout

<div class="flex items-center justify-center min-h-screen bg-gradient-to-br from-yellow-400 via-yellow-500 to-yellow-600">
    <div class="bg-white bg-opacity-30 backdrop-blur-lg shadow-xl rounded-2xl p-8 w-96 max-w-lg border border-white border-opacity-20">
        <h4 class="text-2xl font-extrabold text-center text-white mb-6">Spend Sense</h4>
        <h5 class="text-sm font-bold text-center text-white mb-" 5>WelCome Bakc!</h5>


        @if (!string.IsNullOrEmpty(Message))
        {
            <p class="text-red-300 text-sm mb-4 text-center">@Message</p>
        }

        <div class="space-y-6">
            <div>
                <label class="block text-sm font-medium text-white" for="username">Username</label>
                <div class="relative mt-1">
                    <input id="username" @bind="LoginUsername" placeholder="Enter your username"
                           class="w-full px-4 py-3 pl-10 border-2 border-gray-300 rounded-lg bg-white bg-opacity-70 focus:outline-none focus:ring-2 focus:ring-yellow-400 transition duration-300" />
                    <span class="absolute inset-y-0 left-3 flex items-center text-gray-400">
                        <i class="fas fa-user"></i>
                    </span>
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-white" for="password">Password</label>
                <div class="relative mt-1">
                    <input id="password" @bind="LoginPassword" placeholder="Enter your password" type="password"
                           class="w-full px-4 py-3 pl-10 border-2 border-gray-300 rounded-lg bg-white bg-opacity-70 focus:outline-none focus:ring-2 focus:ring-yellow-400 transition duration-300" />
                    <span class="absolute inset-y-0 left-3 flex items-center text-gray-400">
                        <i class="fas fa-lock"></i>
                    </span>
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-white" for="currency">Currency</label>
                <select id="currency" @bind="SelectedCurrency"
                        class="mt-1 w-full px-4 py-3 border-2 border-gray-300 rounded-lg bg-white bg-opacity-70 focus:outline-none focus:ring-2 focus:ring-yellow-400 transition duration-300">
                    <option value="NPR">NPR</option>
                    <option value="USD">USD</option>
                    <option value="INR">INR</option>
                </select>
            </div>

            <button @onclick="LoginPage"
                    class="w-full bg-gradient-to-r from-yellow-500 to-yellow-600 hover:from-yellow-600 hover:to-yellow-700 text-white py-3 rounded-lg shadow-lg focus:outline-none focus:ring-2 focus:ring-yellow-400 transition duration-300">
                Login
            </button>

            <div class="text-center mt-6">
                <a href="/register" class="text-white text-sm hover:text-yellow-200 hover:underline">Don't have an account? Register</a>
            </div>
        </div>
    </div>
</div>


@code {
    private string LoginUsername = "";
    private string LoginPassword = "";
    private string Message = "";
    private string SelectedCurrency = "NPR"; // Default currency

    private List<User> Users = new();

    protected override void OnInitialized()
    {
        // Load users from UserService when the component is initialized
        Users = UserService.LoadUsers();
    }

    private void LoginPage()
    {
        // Try to find a user by username
        var user = Users.FirstOrDefault(u => u.Username == LoginUsername);

        if (user != null && UserService.ValidatePassword(LoginPassword, user.Password))
        {
            // Redirect to dashboard if login is successful
            NavigationManager.NavigateTo("/dashboard");
        }
        else
        {
            // Show an error message if login fails
            Message = "Invalid username or password.";
        }
    }
}
